<!-- {{yield}} -->
<div class="projectPage">
  <div class="container">
    <h1><strong>{{project.title}}</strong></h1>
    <h4>{{project.host_name}}</h4>
    <h3>{{project.date}}</h3>
    <h3>{{project.time}}</h3>
    <h3>{{project.location}}</h3>
    <h3>We need {{project.contributor}} people</h3>
    <h3>{{project.summary}}</h3>
    <button class="defaultBtn" {{action 'completedProject' project.id}}>This project is completed</button>
    <h3><img src="{{project.image}}" alt="{{project.title}}" /></h3>
    <br>
    <button class="defaultBtn" {{action 'delete' project}}>Delete</button>
  </div>
</div>
