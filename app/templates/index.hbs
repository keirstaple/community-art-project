<div class="homeHeader">
  <div class="header-text">
    <h1>pARTicipate</h1>
    <h2 class="tagline">Create, Collaborate, and Appreciate local art.</h2>
  </div>
  {{#scroll-to href='#homepage-content'}}
    <img class="down-arrow-icon" src="/img/down-chevron.png" alt="down arrow icon" />
  {{/scroll-to}}
</div>
<div class="container">
  <div id="homepage-content">
    <!-- {{new-project save="save"}} -->
    <div class="projectFeed">
      <div class="upcoming">
        <h3>Upcoming Art Projects</h3>
        <hr>
        <ul>
          {{#each model.uncompleted as |project|}}
            {{project-tile project=project}}
          {{/each}}
        </ul>
        {{#link-to 'upcoming-projects'}}<p class="viewAll">View All</p>{{/link-to}}
      </div>
      <div class="completed">
        <h3>Completed Projects</h3>
        <hr>
        <ul>
          {{#each model.completed as |project|}}
            {{project-tile project=project}}
          {{/each}}
        </ul>
        {{#link-to 'completed-projects'}}<p class="viewAllPink">View All</p>{{/link-to}}
      </div>
    </div>
  </div>
</div>
<div class="newsletter-container">
  <h2>Sign up for our newsletter</h2>
  <form>
    <input type="text">
    <button class="primaryBtn"type="submit">Sign Up</button>
  </form>
</div>
